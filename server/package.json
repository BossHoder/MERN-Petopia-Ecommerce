{
    "name": "mern-petopia-ecommerce",
    "version": "1.0.0",
    "type": "module",
    "description": "Pet shop e-commerce application built with the MERN stack.",
    "main": "index.js",
    "engines": {
        "node": ">=18.0.0"
    },
    "scripts": {
        "start-prod": "npm run build && node ./build/index.js",
        "docker:start:prod": "node ./build/index.js",
        "build": "npm run clean && npm run build-babel",
        "clean": "rm -rf build && mkdir build",
        "build-babel": "babel -d ./build ./src -s",
        "start-dev": "node --exec babel-node src/index.js",
        "server": "nodemon --clear --exec babel-node src/index.js",
        "client": "npm start --prefix ../client",
        "kill-ports": "powershell -ExecutionPolicy Bypass -File kill-ports.ps1",
        "dev": "npm run kill-ports && concurrently \"npm run server\" \"npm run client\"",
        "seed:products": "nodemon --exec babel-node src/scripts/createProductCollection.js",
        "migrate:variants": "nodemon --exec babel-node src/scripts/migrateVariants.js",
        "seed": "node src/database/seeders/index.js",
        "migrate": "node src/utils/runMigrations.js",
        "migrate:parent-slugs": "node src/utils/updateParentCategorySlugs.js"
    },
    "author": "Theanhdola",
    "license": "ISC",
    "dependencies": {
        "@babel/cli": "^7.25.9",
        "@babel/core": "^7.26.0",
        "@babel/node": "^7.26.0",
        "@babel/plugin-proposal-optional-chaining": "^7.21.0",
        "@babel/preset-env": "^7.26.0",
        "@babel/register": "^7.25.9",
        "@amplitude/analytics-node": "^1.0.0",
        "@segment/analytics-node": "^3.5.0",
        "bcryptjs": "^2.4.3",
        "concurrently": "^9.2.0",
        "config": "^3.3.12",
        "connect-flash": "^0.1.1",
        "cors": "^2.8.5",
        "dotenv": "^16.4.7",
        "express": "^4.21.2",
        "express-list-endpoints": "^7.1.1",
        "faker": "^5.5.3",
        "handlebars": "^4.7.8",
        "joi": "^17.13.3",
        "jsonwebtoken": "^9.0.2",
        "mjml": "^4.15.3",
        "mixpanel": "^0.17.0",
        "mongoose": "^8.16.4",
        "multer": "^1.4.4",
        "node-cron": "^4.2.1",
        "nodemailer": "^6.9.8",
        "passport": "^0.7.0",
        "passport-facebook": "^3.0.0",
        "passport-google-oauth2": "^0.2.0",
        "passport-jwt": "^4.0.1",
        "passport-local": "^1.0.0"
    },
    "devDependencies": {
        "nodemon": "^3.1.10"
    }
}
